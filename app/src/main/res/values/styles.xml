<resources>

    <!-- Base application theme. -->

    <style name="fullscreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="loadingstyle">
        <item name="android:progressDrawable">@drawable/loadprogress</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progress">0</item>
    </style>
    <style name="gunpress_seek" parent="Base.Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/gunpress_seekbar</item>
        <item name="android:thumb">@drawable/gunpress_seek_thum</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <!-- 选项栏消失 -->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
