<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/dialog_keyboard_rock_attr_parent"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_gravity="center"
             android:background="@drawable/dialog_message_box_b">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#00000000"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="4dp"
                android:text="鼠标灵敏度调节"
                android:textColor="@color/mk_white"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_reset_mousesbr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="恢复默认"
                android:textColor="@color/b1"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_mouse_sensitivity_x"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="3"
                android:text="鼠标灵敏度:0"
                android:textColor="@color/mk_white"/>

            <SeekBar
                android:id="@+id/sbar_mouse_sensitivity_x"
                style="@style/gunpress_seek"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:layout_marginTop="0dp"
                android:layout_weight="5"
                android:max="30"
                android:min="0"
                android:progress="20"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_mouse_wheel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="3"
                android:text="滚轮灵敏度:0"
                android:textColor="@color/mk_white"/>

            <SeekBar
                android:id="@+id/sbar_mouse_Wheel"
                style="@style/gunpress_seek"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:layout_marginTop="0dp"
                android:layout_weight="5"
                android:max="100"
                android:min="0"
                android:progress="57"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/rbn_mouse_save"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right|top"
        android:layout_margin="5dp"
        android:src="@mipmap/frame_close"/>
</FrameLayout>
