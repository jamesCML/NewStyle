<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent_4"
    android:background="@mipmap/gunqabox">

    <TextView
        android:id="@+id/dialogmsgtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="title"
        android:textColor="@color/mk_white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_below="@+id/dialogmsgtitle"
        android:layout_above="@+id/temp20180515"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/dialogmsgmsg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="4dp"
            android:text="t"
            android:textColor="@color/mk_white"
            android:textSize="15sp" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:id="@+id/temp20180515"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialogmsgyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:minHeight="40dp"
            android:minWidth="80dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/dialog_message_bt_select"
            android:text="@string/ok" />

        <Button
            android:id="@+id/dialogmsgno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:minHeight="40dp"
            android:minWidth="80dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/dialog_message_bt_select"
            android:text="@string/main_cancel" />
    </LinearLayout>
</RelativeLayout>