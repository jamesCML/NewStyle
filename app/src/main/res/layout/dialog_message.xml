<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent_4"
    android:background="@drawable/dialog_message_box_b">

    <TextView
        android:id="@+id/dialogmsgtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="title"
        android:textColor="@color/mk_white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_below="@+id/dialogmsgtitle"
        android:layout_above="@+id/temp20180515"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/dialogmsgmsg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:padding="4dp"
            android:text=""
            android:textColor="@color/mk_white"
            android:textSize="15sp" />
    </ScrollView>

    <include
        layout="@layout/yesnobottombar"
        android:id="@+id/temp20180515" />
</RelativeLayout>