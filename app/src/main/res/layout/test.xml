<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="2dp"
    android:gravity="top"
    android:background="@drawable/dialog_message_box_b"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:background="@color/mk_isdown"
        android:id="@+id/switchmod"
        android:textColor="#ffffff"
        android:text="当前模式:LED灯(点击切换模式)"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ledparent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/id_red"
            android:text="写入Flash"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="#2200ff00"
            android:layout_width="match_parent"

            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/id_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#22ffff00"
            android:text="读取所有配置"
            android:textColor="#ffffff"
            android:textStyle="bold"

            android:visibility="gone" />

        <Button
            android:id="@+id/id_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#22ff0000"
            android:text="读D0"
            android:textColor="#ffffff"
            android:textStyle="bold"

            android:visibility="gone" />

        <Button
            android:id="@+id/id_yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#220000ff"
            android:text="读D1"
            android:textColor="#ffffff"
            android:textStyle="bold"

            android:visibility="gone" />
    </LinearLayout>

    <Button
        android:id="@+id/id_ok"
        android:text="摇杆状态"
        android:visibility="gone"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="#88eeeeee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:background="#66ff0000"
        android:id="@+id/id_exit"
        android:textColor="#ffffff"
        android:text="彻底退出"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:background="#5500bbbb"
        android:id="@+id/id_init"
        android:textColor="#ffffff"
        android:text="重新识别"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>