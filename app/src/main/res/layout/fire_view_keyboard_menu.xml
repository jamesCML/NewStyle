<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_15"
    android:layout_gravity="center|top"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:alpha="0.6">


    <!-- 保存按钮 -->
    <TextView
        android:id="@+id/tv_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="9dp"
        android:layout_toRightOf="@id/iv_menu"
        android:background="#6600ff00"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="4dp"
        android:text="@string/kbv_save"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_gravity="center|top"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/rl_menu_bar"
            layout="@layout/fire_view_keyboard_menu_btn_bar002"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="46dp" />

        <!--<include layout="@layout/view_keyboard_menu_btn_bar2"        />-->

        <!--</FrameLayout>-->

    </LinearLayout>
    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_alignBottom="@+id/tv_back"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_menu_delete" />
</FrameLayout>
