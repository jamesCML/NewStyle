<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/button_menu_box"
    android:id="@+id/parent_9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/initab_btbar"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </LinearLayout>
        </HorizontalScrollView>

        <ImageView
            android:id="@+id/setting_close"
            android:textColor="@color/mk_white"
            android:layout_gravity="right"
            android:scaleType="fitEnd"
            android:src="@mipmap/frame_close"
            android:padding="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="34dp" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/initab_page"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

    </android.support.v4.view.ViewPager>
</LinearLayout>