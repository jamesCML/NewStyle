<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/parent_4"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:minHeight="30dp">

        <TextView
            android:id="@+id/dialog_oversize_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/dialog_message_bt_select"
            android:padding="1dp"
            android:text="@string/main_cancel"
            android:textColor="#ff5959"
            android:textStyle="bold"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/dialog_oversize_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/configbutton"
            android:padding="3dp"
            android:text="@string/initab_writetodev"
            android:textColor="@color/mk_white"
            android:textSize="22sp"/>


        <TextView
            android:id="@+id/dialog_oversize_changetv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/configbutton"
            android:padding="3dp"
            android:text="@string/initab_gotogunpresslist"
            android:textColor="@color/mk_white"
            android:textSize="22sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:background="@color/grey_1"/>

    <LinearLayout
        android:id="@+id/dialog_oversize_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#990000ff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_oversize_leftmsg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/initab_unchoiceconfig"
            android:textColor="#ff5959"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialog_oversize_rightmsg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="1dp"
            android:text="@string/initab_choiceconfigs"
            android:textColor="#92E09D"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_oversize_list_par"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <ListView
            android:id="@+id/dialog_oversize_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="30"
            android:background="@drawable/dialog_message_box_b_deep"
            android:scrollbars="none"></ListView>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@color/grey_1"/>

        <ListView
            android:id="@+id/dialog_oversize_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="30"
            android:background="@drawable/dialog_message_box_b_deep"
            android:scrollbars="none"></ListView>
    </LinearLayout>

    <ScrollView
        android:id="@+id/dialog_oversize_gun_par"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:padding="10dp"
        android:scrollbars="none"
        android:fillViewport="true"
        android:gravity="center"
        android:visibility="gone">

        <LinearLayout
            android:background="@drawable/wait_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:padding="8dp"
                android:layout_margin="8dp"
                android:background="@drawable/dialog_message_box_w"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_margin="3dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/adjustgunsen" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_margin="15dp"
                        android:layout_gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="10sp"
                            android:layout_marginRight="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/initab_cfqdefault"
                            android:textColor="@color/mk_white" />

                        <ImageView
                            android:id="@+id/cfq_sub"
                            android:background="@mipmap/gunsub"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                        <TextView
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:textSize="8sp"
                            android:layout_gravity="center"
                            android:id="@+id/dialog_oversize_gun_cfq_sen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="13"
                            android:textColor="@color/mk_white" />

                        <ImageView
                            android:id="@+id/cfq_add"
                            android:background="@mipmap/gunadd"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                    </LinearLayout>

                    <LinearLayout

                        android:orientation="horizontal"
                        android:layout_margin="15dp"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="10sp"
                            android:layout_marginRight="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/initab_bqdefault"
                            android:textColor="@color/mk_white" />

                        <ImageView
                            android:id="@+id/bq_sub"
                            android:background="@mipmap/gunsub"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                        <TextView
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:textSize="8sp"
                            android:layout_gravity="center"
                            android:id="@+id/dialog_oversize_gun_bq_sen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="16"
                            android:textColor="@color/mk_white" />

                        <ImageView
                            android:id="@+id/bq_add"
                            android:background="@mipmap/gunadd"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_gravity="right"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginRight="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="10sp"
                            android:text="@string/initab_akdefault"
                            android:textColor="@color/mk_white" />

                        <ImageView
                            android:id="@+id/ak_sub"
                            android:background="@mipmap/gunsub"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                        <TextView
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:textSize="8sp"
                            android:layout_gravity="center"
                            android:id="@+id/dialog_oversize_gun_ak_sen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="22"
                            android:textColor="@color/mk_white" />

                        <ImageView
                            android:id="@+id/ak_add"
                            android:background="@mipmap/gunadd"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                    </LinearLayout>

                    <TextView

                        android:id="@+id/btn_reset_gun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_gravity="right"
                        android:text="@string/resetdefault"
                        android:textSize="8sp"
                        android:background="@drawable/gunaddsub_bg"
                        android:padding="7dp"
                        android:textColor="@color/b1" />
                </LinearLayout>

                <View
                    android:background="@color/grey_1"
                    android:layout_width="1px"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:text="@string/initab_automouse"
                        android:id="@+id/dialog_oversize_automouse"
                        android:textColor="@color/mk_white"
                        android:textSize="10sp"
                        android:layout_marginTop="10dp"
                        android:paddingHorizontal="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <CheckBox
                        android:text="@string/initab_tpcfg"
                        android:id="@+id/dialog_oversize_tpcfg"
                        android:textColor="@color/mk_white"
                        android:textSize="10sp"
                        android:layout_marginTop="10dp"
                        android:paddingHorizontal="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_tip"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/initab_gunpress_tip" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/initab_bootchoice"
                android:textColor="@color/mk_white"
                android:visibility="gone"/>

            <RadioGroup
                android:id="@+id/dialog_oversize_gun_rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/dialog_message_box"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/dialog_oversize_gun_rg_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:button="@drawable/correctorerror_empty"
                    android:checked="true"
                    android:text="@string/initab_pressgunclose"
                    android:textColor="@color/mk_white"
                    android:textSize="12sp"></RadioButton>

                <RadioButton
                    android:id="@+id/dialog_oversize_gun_rg_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:button="@drawable/correctorerror_empty"
                    android:text="@string/initab_usecfqdefault"
                    android:textColor="@color/mk_white"
                    android:textSize="12sp"></RadioButton>

                <RadioButton
                    android:id="@+id/dialog_oversize_gun_rg_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:button="@drawable/correctorerror_empty"
                    android:text="@string/initab_usebqdefault"
                    android:textColor="@color/mk_white"
                    android:textSize="12sp"></RadioButton>

                <RadioButton
                    android:id="@+id/dialog_oversize_gun_rg_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:button="@drawable/correctorerror_empty"
                    android:text="@string/initab_useakdefault"
                    android:textColor="@color/mk_white"
                    android:textSize="12sp"></RadioButton>
            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_margin="5dp"
                android:background="@color/grey_1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/initab_problems"
                android:textColor="@color/mk_white"/>

            <ListView
                android:id="@+id/dialog_oversize_gun_qa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/button_menu_box"></ListView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>