<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent_12"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/inibt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="配置"
            android:textColor="@color/rock_blue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:src="@mipmap/frame_close"
            android:layout_gravity="right"
            android:adjustViewBounds="true"
            android:id="@+id/inibt_close"
            android:layout_width="64px"
            android:layout_height="64px" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/inibt_cur"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:text="*****"
            android:textColor="@color/mk_white"
            android:textSize="20sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:paddingBottom="50dp"
        android:id="@+id/inibt_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/grey_white"
        android:dividerHeight="2px"></ListView>
</LinearLayout>